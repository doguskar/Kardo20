
<div class="dh-user">
    @if (String.IsNullOrEmpty((string)ViewData["Session_UserUID"]))
    {
        <a href="/Members/Login" class="dh-log-btn">Login</a>
    }
    else
    {
        <a href="#" data-dropdown="dk-user-box"><img src="~/Content/img/systemPics/kardo-icon.png" alt="ppic" /></a>
        <div id="dk-user-box" class="dk-user-box hidden-xs">
            <div class="active-account">
                <div class="user-photo">
                    <img src="~/Content/img/systemPics/kardo-icon.png" alt="" />
                    <a href="#">Fotorafı Değiştir</a>
                </div>
                <div class="user-info">
                    <div class="user-rname">Kardo</div>
                    <div class="username">&#40Kardo</div>
                    <div class="user-profil-link"><a href="#" class="dk-btn dk-btn-primary">Profile Git</a></div>
                </div>
                <div class="clear-both"></div>
            </div>
            <div class="other-accounts">
                <div class="accounts-item">
                    <a href="#">
                        <img src="~/Content/img/systemPics/kardo-icon.png" alt="" />
                        <div class="user-rname">Kardo</div>
                        <div class="username">&#40Kardo</div>
                    </a>
                </div>
            </div>
            <div class="dk-user-box-log">
                <a href="#" class="dk-btn">Hesap Ekle</a>
                <a href="#" class="dk-btn">Oturumu Kapat</a>
            </div>
        </div>
    }
</div>
